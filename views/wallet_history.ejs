<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Wallet History â€” JSChain</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: #f5f7fa; font-family: 'Inter', sans-serif; }
    .navbar { background-color: #fff; border-bottom: 1px solid #ddd; }
    h1, h4 { font-weight: 600; }
    .card-light { background: #fff; border: 1px solid #ddd; border-radius: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.05); margin-bottom: 1.5rem; }
    .mono { font-family: monospace; word-break: break-all; }
    .table { background: #fff; border-radius: 12px; overflow: hidden; }
    .table th { background: #f1f3f5; }
    .badge-success { background-color: #28a745; }
    .badge-danger { background-color: #dc3545; }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light px-3">
    <a class="navbar-brand fw-bold" href="/">âš¡ JSChain Wallets</a>
    <div class="ms-auto">
      <a class="btn btn-outline-info me-2" href="/miner">Miner</a>
      <a class="btn btn-outline-dark me-2" href="/explorer">Explorer</a>
      <a class="btn btn-outline-warning me-2" href="/stats">Stats</a>
      <a class="btn btn-outline-danger" href="/logout">Logout</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">ðŸ“œ Transaction History</h1>

    <div class="card-light p-4">
      <h4 class="mb-3"><i class="fas fa-wallet text-success"></i> <%= name %></h4>

      <% if (history.length === 0) { %>
        <div class="alert alert-secondary">Belum ada transaksi untuk wallet ini.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped align-middle">
            <thead>
              <tr>
                <th scope="col">Tx Hash</th>
                <th scope="col">From</th>
                <th scope="col">To</th>
                <th scope="col">Amount</th>
                <th scope="col">Status</th>
                <th scope="col">Timestamp</th>
              </tr>
            </thead>
            <tbody>
              <% history.forEach(tx => { %>
                <tr>
                  <td class="mono"><%= tx.hash %></td>
                  <td class="mono"><%= tx.from %></td>
                  <td class="mono"><%= tx.to %></td>
                  <td><%= tx.amount %></td>
                  <td>
                    <% if (tx.status === 'success') { %>
                      <span class="badge badge-success">Success</span>
                    <% } else { %>
                      <span class="badge badge-danger">Failed</span>
                    <% } %>
                  </td>
                  <td><%= tx.timestamp %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>

      <div class="mt-4">
        <a class="btn btn-outline-primary" href="/wallets">
          <i class="fas fa-arrow-left"></i> Back to Wallets
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
