<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Wallets â€” JS-Chain</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style> body { background:#121212; color:#fff } </style>
</head>
<body class="p-4">
<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸ’¼ Wallets</h1>
    <div>
      <a class="btn btn-outline-info me-2" href="/miner">Miner</a>
      <a class="btn btn-outline-light" href="/explorer">Explorer</a>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="card bg-dark">
        <div class="card-body">
          <h5 class="card-title">Create Wallet</h5>
          <form action="/wallets/create" method="POST">
            <div class="mb-3">
              <label class="form-label">Wallet Name</label>
              <input type="text" name="name" class="form-control" placeholder="e.g., myminer" required>
            </div>
            <button class="btn btn-success">Create</button>
          </form>
        </div>
      </div>
      <div class="card bg-dark mt-4">
        <div class="card-body">
          <h5 class="card-title">Import Wallet (JSON)</h5>
          <form action="/wallets/import" method="POST">
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" name="name" class="form-control" placeholder="local name" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Wallet JSON</label>
              <textarea name="walletJson" class="form-control" rows="6" placeholder='{"publicKey":"...","privateKey":"..."}' required></textarea>
            </div>
            <button class="btn btn-primary">Import</button>
          </form>
          <small class="text-warning d-block mt-2">Jangan bagikan private key ke siapa pun.</small>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h4 class="mb-3">Your Wallets</h4>
      <div class="list-group">
        <% wallets.forEach(w => { %>
          <div class="list-group-item list-group-item-action bg-dark text-white d-flex justify-content-between align-items-center">
            <div>
              <div class="fw-bold"><%= w.name %></div>
              <div class="small text-muted" style="word-break:break-all;"><%= w.publicKey %></div>
            </div>
            <div class="d-flex align-items-center">
              <a class="btn btn-sm btn-primary me-2" href="/wallets/<%= encodeURIComponent(w.name) %>">Open</a>
              <a class="btn btn-sm btn-outline-warning" href="/wallets/<%= encodeURIComponent(w.name) %>/export">Export</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
