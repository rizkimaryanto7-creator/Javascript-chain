<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Explorer ‚Äî JS-Chain</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <style>
    body { background: #ffffff; color: #222; font-family: 'Inter', sans-serif; }
    .navbar { background-color: #f8f9fa; border-bottom: 1px solid #ddd; }
    h1, h2, h5 { font-weight: 600; }
    .mono { font-family: monospace; word-break: break-all }
    .card-dark { background: #f9f9f9; border: 1px solid #ddd; border-radius: 10px; padding: 1rem; margin-bottom: 1.5rem; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    .btn-primary { background-color: #1877F2; border-color: #1877F2; font-weight: 600; }
    .btn-primary:hover { background-color: #145dbf; border-color: #145dbf; }
    .table th { font-size: 1rem; }
    .table td { font-size: 0.95rem; }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light px-3">
    <a class="navbar-brand fw-bold" href="/">‚ö° JS-Chain Explorer</a>
    <div class="ms-auto">
      <a class="btn btn-outline-info me-2" href="/wallets">Wallets</a>
      <a class="btn btn-outline-dark me-2" href="/miner">Miner</a>
      <a class="btn btn-outline-warning" href="/stats">Stats</a>
    </div>
  </nav>

  <div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>üîç Block Explorer</h1>
    </div>

    <!-- Search -->
    <form class="mb-4 d-flex" action="/search" method="GET">
      <input type="text" name="q" class="form-control me-2" placeholder="search block index, hash, or address" required>
      <button class="btn btn-primary">Search</button>
    </form>

    <!-- Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Latest Block</h5>
          <p class="fs-4 text-primary"><%= chain.length ? chain[chain.length-1].index : 'N/A' %></p>
        </div>
      </div>
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Total TX</h5>
          <p class="fs-4 text-success"><%= chain.reduce((acc,b)=>acc+b.transactions.length,0) %></p>
        </div>
      </div>
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Blocks</h5>
          <p class="fs-4 text-warning"><%= chain.length %></p>
        </div>
      </div>
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Peers</h5>
          <p class="fs-4 text-info"><%= typeof peersCount !== 'undefined' ? peersCount : 'N/A' %></p>
        </div>
      </div>
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Difficulty</h5>
          <p class="fs-4 text-danger"><%= typeof difficulty !== 'undefined' ? difficulty : 'N/A' %></p>
        </div>
      </div>
      <div class="col-md-2 col-6">
        <div class="card-dark text-center">
          <h5>Reward</h5>
          <p class="fs-4 text-info"><%= typeof reward !== 'undefined' ? reward : 'N/A' %></p>
        </div>
      </div>
    </div>

    <!-- Blocks Table -->
    <div class="card-dark">
      <h5 class="mb-3">üìä Blockchain Explorer</h5>
      <div class="table-responsive">
        <table class="table table-hover align-middle" id="blocksTable">
          <thead class="table-light">
            <tr>
              <th>Index</th>
              <th>Hash</th>
              <th>Tx Count</th>
              <th>Time</th>
              <th>Miner</th>
              <th>Reward</th>
            </tr>
          </thead>
          <tbody>
            <% chain.slice().reverse().forEach(block => {
              const rewardTx = block.transactions.find(tx => tx.from === 'SYSTEM');
            %>
              <tr>
                <td><a href="/block/<%= block.index %>" class="text-info fw-bold"><%= block.index %></a></td>
                <td class="mono"><%= block.hash.slice(0, 16) %>... <a href="#" onclick="alert('<%= block.hash %>')" class="text-info ms-2">Show Full</a></td>
                <td><span class="badge bg-primary"><%= block.transactions.length %></span></td>
                <td><%= new Date(block.timestamp).toLocaleString() %></td>
                <td class="mono">
                  <% if (rewardTx?.to) { %>
                    <a href="/address/<%= rewardTx.to %>" class="text-warning"><%= rewardTx.to.slice(0, 12) %>...</a>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
                <td><%= rewardTx ? rewardTx.amount : '-' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Pagination -->
      <div class="d-flex justify-content-between mt-3">
        <button class="btn btn-outline-dark btn-sm" onclick="paginate(-1)">Prev</button>
        <button class="btn btn-outline-dark btn-sm" onclick="paginate(1)">Next</button>
      </div>
    </div>
  </div>

<!-- Chart -->
    <div class="card-dark mt-4">
      <h5 class="mb-3">üìà Block Transactions Volume</h5>
      <canvas id="growthChart" height="80"></canvas>
    </div>
  </div>

  <!-- Chart Script -->
  <script>
    const labels = [];
    const txCounts = [];
    <% chain.forEach(block => { %>
      labels.push(<%= block.index %>);
      txCounts.push(<%= block.transactions.length %>);
    <% }) %>

    new Chart(document.getElementById('growthChart'), {
      type: 'line',
      data: {
        labels,
        datasets: [{
          label: 'TX per Block',
          data: txCounts,
          borderColor: '#1877F2',
          backgroundColor: 'rgba(24,119,242,0.3)',
          fill: true,
          tension: 0.3
        }]
      },
      options: {
        plugins: {
          tooltip: {
            callbacks: {
              label: function(ctx) {
                return `Block #${ctx.label}: ${ctx.raw} TX`;
              }
            }
          },
          legend: { labels: { color: '#333' } }
        },
        scales: {
          x: { ticks: { color: '#333' } },
          y: { ticks: { color: '#333' } }
        }
      }
    });

    // Pagination logic
    let currentPage = 0;
    const rowsPerPage = 20;
    function paginate(direction) {
      const table = document.getElementById('blocksTable').getElementsByTagName('tbody')[0];
      const rows = table.getElementsByTagName('tr');
      const totalPages = Math.ceil(rows.length / rowsPerPage);
      currentPage = Math.min(Math.max(currentPage + direction, 0), totalPages - 1);
      for (let i = 0; i < rows.length; i++) {
        rows[i].style.display = (Math.floor(i / rowsPerPage) === currentPage) ? '' : 'none';
      }
    }
    paginate(0);
  </script>

</body>
</html>
