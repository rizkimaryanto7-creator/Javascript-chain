<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Peers ‚Äî JS-Chain</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #ffffff; color: #333; font-family: 'Inter', sans-serif; }
    .navbar { background-color: #f8f9fa; border-bottom: 1px solid #ddd; }
    .card-light { background: #f9f9f9; border: 1px solid #ddd; border-radius: 10px; padding: 1.5rem; margin-bottom: 1.5rem; box-shadow: 0 2px 6px rgba(0,0,0,0.05); }
    .mono { font-family: monospace; word-break: break-all; }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light px-3">
    <a class="navbar-brand fw-bold" href="/">‚ö° JS-Chain</a>
    <div class="ms-auto">
      <a class="btn btn-outline-info me-2" href="/explorer">Explorer</a>
      <a class="btn btn-outline-dark me-2" href="/wallets">Wallets</a>
      <a class="btn btn-outline-success me-2" href="/miner">Miner</a>
      <a class="btn btn-outline-warning" href="/stats">Stats</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">üåê Peer Nodes</h1>

    <div class="card-light">
      <% if (typeof peers !== 'undefined' && peers.length > 0) { %>
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Peer Address</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% peers.forEach((peer, idx) => { %>
              <tr>
                <td><%= idx + 1 %></td>
                <td class="mono"><%= peer.address || peer %></td>
                <td>
                  <% if (peer.status === 'connected' || peer.connected) { %>
                    <span class="badge bg-success">Connected</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Unknown</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="alert alert-secondary">Belum ada peer yang terhubung.</div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
