<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Address Explorer â€” JS-Chain</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background:#ffffff; color:#000000; }
    .mono { font-family: monospace; word-break: break-all; }
    .card { border: 1px solid #ddd; }
    .table thead th { background-color: #f8f9fa; }
  </style>
</head>
<body class="p-4">
<div class="container">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Address detail</h1>
    <div>
      <a class="btn btn-outline-primary me-2" href="/explorer">Explorer</a>
      <a class="btn btn-outline-secondary" href="/">Home</a>
    </div>
  </div>

  <!-- Address Info -->
  <div class="card mb-4">
    <div class="card-body">
      <div><strong>Address:</strong></div>
      <div class="mono text-primary"><%= addr %></div>
      <div class="mt-2">Balance: <strong><%= balance %></strong></div>
      <div class="mt-2">Total Transactions: <strong><%= txs.length %></strong></div>
    </div>
  </div>

  <!-- Transactions Table -->
  <h4 class="mb-3">Transactions</h4>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Block</th>
        <th>From</th>
        <th>To</th>
        <th>Amount</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% txs.slice().reverse().forEach(tx => { %>
        <tr>
          <td><%= tx.blockIndex %></td>
          <td class="mono"><%= tx.from.slice(0, 12) %>...</td>
          <td class="mono"><%= tx.to.slice(0, 12) %>...</td>
          <td><%= tx.amount %></td>
          <td>
            <% if (tx.timestamp) { %>
              <%= new Date(tx.timestamp).toLocaleString() %>
            <% } else { %>
              <span class="text-danger">No Timestamp</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
