<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Balance ‚Äî JS-Chain</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #ffffff; color: #333; font-family: 'Inter', sans-serif; }
    .navbar { background-color: #f8f9fa; border-bottom: 1px solid #ddd; }
    .card-light { background: #f9f9f9; border: 1px solid #ddd; border-radius: 10px; padding: 1.5rem; margin-bottom: 1.5rem; box-shadow: 0 2px 6px rgba(0,0,0,0.05); }
    .mono { font-family: monospace; word-break: break-all; }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light px-3">
    <a class="navbar-brand fw-bold" href="/">‚ö° JS-Chain</a>
    <div class="ms-auto">
      <a class="btn btn-outline-info me-2" href="/explorer">Explorer</a>
      <a class="btn btn-outline-dark me-2" href="/wallets">Wallets</a>
      <a class="btn btn-outline-success me-2" href="/miner">Miner</a>
      <a class="btn btn-outline-warning" href="/stats">Stats</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">üí∞ Cek Saldo Wallet</h1>

    <!-- Form cek saldo -->
    <div class="card-light">
      <form id="balanceForm" class="mb-3">
        <label class="form-label">Wallet Address</label>
        <input type="text" id="addressInput" class="form-control mono" placeholder="Masukkan public key / address" required>
        <button class="btn btn-primary mt-3">Cek Saldo</button>
      </form>
      <div id="balanceResult" class="mt-3"></div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const form = document.getElementById('balanceForm');
    const resultDiv = document.getElementById('balanceResult');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const addr = document.getElementById('addressInput').value.trim();
      if (!addr) return;
      resultDiv.innerHTML = "‚è≥ Checking balance...";
      try {
        const res = await fetch(`/api/address/${encodeURIComponent(addr)}`);
        const data = await res.json();
        if (data.error) {
          resultDiv.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
        } else {
          resultDiv.innerHTML = `
            <div class="alert alert-success">
              <strong>Address:</strong> ${data.address}<br>
              <strong>Balance:</strong> ${data.balance} JS<br>
              <strong>Transactions:</strong> ${data.transactions.length}
            </div>
          `;
        }
      } catch (err) {
        resultDiv.innerHTML = `<div class="alert alert-danger">‚ùå Error: ${err.message}</div>`;
      }
    });
  </script>
</body>
</html>
